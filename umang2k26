<script>
    // --- WHATSAPP CONNECTION LOGIC ---
    document.getElementById('festOrderForm').addEventListener('submit', function(e) {
        e.preventDefault();

        // 1. SET THE SELLER'S PHONE NUMBER HERE (e.g., 91 followed by 10 digits)
        const sellerWhatsApp = "6209231138"; 

        // 2. Collect user info
        const name = document.getElementById('custName').value;
        const phone = document.getElementById('custPhone').value;
        const item = document.getElementById('foodSelect').value;
        const qty = document.getElementById('foodQty').value;
        const loc = document.getElementById('location').value;
        
        // 3. Calculate Price
        const price = document.getElementById('foodSelect').selectedOptions[0].getAttribute('data-price');
        const total = price * qty;

        // 4. Format the message for WhatsApp
        // %0A is a "New Line" in URL encoding
        const text = `*-- NEW UMANG FEST ORDER --*%0A%0A` +
                     `*Customer:* ${name}%0A` +
                     `*Phone:* ${phone}%0A` +
                     `*Order:* ${item} x ${qty}%0A` +
                     `*Location:* ${loc}%0A` +
                     `--------------------------%0A` +
                     `*Total Amount: ₹${total}*%0A` +
                     `--------------------------%0A` +
                     `_Please prepare the order!_`;

        // 5. Open WhatsApp
        const waUrl = `https://wa.me/${sellerWhatsApp}?text=${text}`;
        window.open(waUrl, '_blank');

        alert("Order placed! You are being redirected to WhatsApp to notify the seller.");
    });
</script>

